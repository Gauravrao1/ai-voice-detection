import torch
import torch.nn as nn

# Define a simple voice detection classifier
class VoiceDetector(nn.Module):
        def __init__(self, input_size=128, hidden_size=256, num_classes=2):
                super(VoiceDetector, self).__init__()
                self.fc1 = nn.Linear(input_size, hidden_size)
                self.relu = nn.ReLU()
                self.dropout = nn.Dropout(0.3)
                self.fc2 = nn.Linear(hidden_size, hidden_size)
                self.fc3 = nn.Linear(hidden_size, num_classes)
        
        def forward(self, x):
                x = self.fc1(x)
                x = self.relu(x)
                x = self.dropout(x)
                x = self.fc2(x)
                x = self.relu(x)
                x = self.dropout(x)
                x = self.fc3(x)
                return x

# Create and save the model
model = VoiceDetector()
torch.save(model.state_dict(), 'classifier.pt')
print("Model saved to classifier.pt")